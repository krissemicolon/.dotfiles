# misc
alias ,="<"
alias t="touch"

# tty
alias ttybig="setfont ter-128n"

# cd
alias ..="cd .."
alias ../..="cd ../.."
alias ../../..="cd ../../.."
alias p="cd ~/Projects"

# ls
